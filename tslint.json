{
  "extends": [
    "tslint-config-standard",
    "tslint-react"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules",
      "public",
      "doc",
      "react-redux.fixed"
    ]
  },
  "rules": {
    "jsx-boolean-value": false,
    "interface-name": [
      true,
      "always-prefix"
    ],
    "ter-arrow-parens": false,
    "no-unused-locals": false,
    "arrow-parens": [
      false,
      "as-needed"
    ],
    "arrow-return-shorthand": [
      true
    ],
    "comment-format": [
      true,
      "check-space"
    ],
    "await-promise": false,
    "import-blacklist": [
      true,
      "rxjs"
    ],
    "interface-over-type-literal": false,
    "max-line-length": [
      true,
      {
        "limit": 90,
        "ignore-urls": true,
        "ignore-patterns": "^import |^export {(.*?)}"
      }
    ],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": "fields-first"
      }
    ],
    "newline-before-return": false,
    "no-any": false,
    "no-empty-interface": false,
    "no-import-side-effect": [
      false
    ],
    "no-inferrable-types": [
      true,
      "ignore-params",
      "ignore-properties"
    ],
    "no-invalid-this": [
      true,
      "check-function-in-method"
    ],
    "no-null-keyword": false,
    "no-require-imports": false,
    "no-submodule-imports": [
      true,
      "@src",
      "rxjs",
      "antd"
    ],
    "no-this-assignment": [
      true,
      {
        "allow-destructuring": true
      }
    ],
    "no-trailing-whitespace": true,
    "object-literal-sort-keys": false,
    "object-literal-shorthand": false,
    "one-variable-per-declaration": [
      false
    ],
    "only-arrow-functions": [
      false,
      "allow-declarations"
    ],
    "ordered-imports": [
      false
    ],
    "prefer-method-signature": false,
    "prefer-template": [
      true,
      "allow-single-concat"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      false
    ],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "type-literal-delimiter": false,
    "typedef": [
      true,
      "parameter",
      "property-declaration"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "jsx-wrap-multiline": false,
    "no-floating-promises": {
      "options": [true],
      "severity": "warning"
    },
    "no-unused-variable": {
      "options": [
        true,
        "react"
      ],
      "severity": "warning"
    }
  }
}
